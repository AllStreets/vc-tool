PORT=5000
NODE_ENV=development

# ============================================
# DATA SOURCE API KEYS & CONFIGURATION
# ============================================

# GitHub API - Tracks trending repos by star velocity
# Get token at: https://github.com/settings/tokens
# Required: public_repo, read:user scopes
GITHUB_TOKEN=your_github_token_here

# NewsAPI - Tech news and funding announcements
# Get key at: https://newsapi.org/
# Free tier: 100 requests/day
NEWSAPI_KEY=your_newsapi_key_here

# Serper API - Web search for emerging trends
# Get key at: https://serper.dev/
# Free tier: 100 searches/month
SERPER_API_KEY=your_serper_api_key_here

# ============================================
# FREE ALTERNATIVE DATA SOURCES (No API Key)
# ============================================

# Hacker News API - Tech community trends & discussions
# API Docs: https://github.com/HackerNews/API
# Status: Ready to use (no auth required)
HACKER_NEWS_ENABLED=true

# Y Combinator Web Scraper - Startup data & founders
# URL: https://www.ycombinator.com/companies
# Status: Ready to scrape (no auth required)
YC_SCRAPER_ENABLED=true

# SEC EDGAR API - Company filings & funding disclosures
# API: https://www.sec.gov/cgi-bin/browse-edgar
# Status: Ready to use (no auth required)
SEC_EDGAR_ENABLED=true

# ============================================
# FUTURE/BETA API SOURCES (Available Soon)
# ============================================

# Twitter/X API - Social trend monitoring & founder mentions
# Status: Awaiting API access approval
# Priority: HIGH (preferred over Hacker News for real-time signals)
# Get token at: https://developer.twitter.com/
# Process: Create app → Request elevated access → Get Bearer token
# Plugin: backend/plugins/twitterPlugin.js (already implemented)
# Fallback: Hacker News API used if unavailable
TWITTER_BEARER_TOKEN=

# AngelList API - Founder profiles, startup data, investment history
# Status: Awaiting access approval / Pending signup confirmation
# Priority: HIGH (best founder network data)
# Get access at: https://www.angellist.com/api
# Process: Create account → Request API access → Receive API key
# Plugin: backend/plugins/angellistPlugin.js (ready to implement when key available)
# Fallback: Y Combinator scraper + SEC EDGAR used if unavailable
ANGELLIST_API_KEY=

# ============================================
# FUTURE/BETA API SOURCES (Lower Priority)
# ============================================

# Product Hunt API - Product launch tracking & founder activity
# Status: OAuth setup required (complex authentication)
# Priority: MEDIUM (nice to have, not critical)
# Docs: https://api.producthunt.com/v2/docs/oauth_user_authentication/
# Note: Requires understanding OAuth grant code flow
# Fallback: Y Combinator scraper + Hacker News used instead
PRODUCT_HUNT_API_KEY=

# Google Trends API - Search volume trends & keyword velocity
# Status: Alpha testing (apply for access, may take weeks)
# Priority: MEDIUM (would complement NewsAPI + Serper)
# URL: https://trends.google.com/api/
# Note: Limited availability, approval not guaranteed
# Fallback: NewsAPI + Serper provide similar signals
GOOGLE_TRENDS_API_KEY=

# Crunchbase API - Comprehensive startup & funding database
# Status: Awaiting sales team approval (may require paid plan)
# Priority: LOW (Y Combinator + SEC EDGAR provide sufficient data)
# URL: https://www.crunchbase.com/
# Note: May require subscription, contact sales team
# Fallback: Y Combinator scraper + SEC EDGAR used instead
CRUNCHBASE_API_KEY=

# ============================================
# DATABASE & CACHE
# ============================================

DATABASE_URL=postgresql://user:password@localhost:5432/vc_intelligence
CACHE_TTL_HOURS=4

# ============================================
# WEB SCRAPING CONFIGURATION
# ============================================

# User agent for web scraping requests
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36
REQUEST_TIMEOUT_MS=10000
MAX_RETRIES=3
